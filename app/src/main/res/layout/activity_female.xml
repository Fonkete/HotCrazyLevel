<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Que tan rica es tu polola?"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sexyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_gravity="center"
        android:text="1"
        android:textAllCaps="true"
        android:textSize="15sp" />

    <SeekBar
        android:max="10"
        android:id="@+id/sexySb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sexyTv" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sexySb"
        android:paddingTop="30dp"
        android:text="¿Que tan loca está tu polola?"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/crazyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_gravity="center"
        android:text="1"
        android:textAllCaps="true"
        android:textSize="15sp" />

    <SeekBar
        android:max="10"
        android:id="@+id/crazySb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crazyTv" />

    <Button
        android:id="@+id/btnfinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="ENVIAR"
        android:textColor="@android:color/white" />


</RelativeLayout>